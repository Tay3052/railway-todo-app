{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // React' must be in scope when using JSX エラーを無効化
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    // プロパティの型指定を無効化
    "react/prop-types": "off",
    // 未使用の変数を無効化
    "no-unused-vars": "off"
  }
}
